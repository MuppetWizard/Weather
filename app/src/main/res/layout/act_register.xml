<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A0C5C5"
    android:gravity="center"
    tools:context=".Activity.ActRegister">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">

       <ImageView
           android:layout_width="65dp"
           android:layout_height="40dp"
           android:src="@drawable/mobile"
           android:paddingLeft="25dp"></ImageView>
       <EditText
           android:id="@+id/phone_register"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:inputType="phone"
           android:maxLength="11"
           android:hint="请输入手机号"
           android:background="@null"
           android:textSize="20sp"
           android:layout_gravity="center">
       </EditText>
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:src="@drawable/paswd"
            android:paddingLeft="25dp"></ImageView>

        <EditText
            android:id="@+id/pswd_register"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textSize="20sp"></EditText>
        <Button
            android:id="@+id/showpswd_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="显示密码"
            android:textColor="#2196F3"
            android:textSize="18dp"
            android:background="@null"
            >
        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center">
        <ImageView
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:src="@drawable/code"
            android:paddingLeft="25dp">
        </ImageView>
<!--        <EditText-->
<!--            android:id="@+id/code_register"-->
<!--            android:layout_width="250dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:hint="请输入验证码"-->
<!--            android:background="@null"-->
<!--            android:textSize="20sp"-->
<!--            android:layout_gravity="center">-->
<!--        </EditText>-->
        <Button
            android:id="@+id/codebt_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号认证"
            android:textColor="#2196F3"
            android:textSize="18dp"
            android:background="@null">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/register"
            android:layout_width="350sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60sp"
            android:background="@drawable/button_shape"
            android:text="注册"
            android:textColor="#FFFFFF"
            android:textSize="25sp"></Button>

        <TextView
            android:id="@+id/userread_register"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:text="登录即同意《用户协议》和《隐私政策》"
            android:textColorHighlight="#00ffffff"
            android:textSize="15sp"></TextView>
    </LinearLayout>
</LinearLayout>