<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/bgimg" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/app_transparent_black">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">


                    <ImageView
                        android:id="@+id/iv_personal"
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="8dp"
                        android:src="@mipmap/selection" />
                    <TextView
                        android:id="@+id/city"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="城市"
                        android:textColor="@color/app_White"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/manage"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="8dp"
                        android:src="@mipmap/options" />
                </RelativeLayout>

                <ScrollView
                    android:id="@+id/sv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="45dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">


                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="180dp"
                                    android:orientation="horizontal">

                                    <RelativeLayout
                                        android:layout_width="170dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="20dp">

                                        <LinearLayout
                                            android:id="@+id/linear1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_marginTop="20dp"
                                            android:orientation="vertical">

                                            <TextView
                                                android:id="@+id/temperature"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="00"
                                                android:textColor="@color/app_White"
                                                android:textSize="90sp" />

                                            <TextView
                                                android:id="@+id/date_info"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="0000/0/00"
                                                android:textColor="@color/app_White"
                                                android:textSize="20dp" />
                                        </LinearLayout>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="20dp"
                                            android:layout_toEndOf="@id/linear1"
                                            android:text="℃"
                                            android:textColor="@color/app_White"
                                            android:textSize="40sp" />
                                    </RelativeLayout>

                                    <ImageView
                                        android:id="@+id/weather_status"
                                        android:layout_width="180dp"
                                        android:layout_height="130dp"
                                        android:layout_marginTop="20dp"
                                        android:src="@mipmap/sunshine" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginTop="100dp"
                                    android:layout_marginEnd="8dp"
                                    android:background="@drawable/bg_weather">


                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="180dp"
                                        android:gravity="center">

                                        <LinearLayout
                                            android:id="@+id/linear2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="90dp"
                                            android:orientation="horizontal"
                                            android:paddingRight="8dp"
                                            android:paddingBottom="8dp">

                                            <LinearLayout
                                                android:layout_width="100dp"
                                                android:layout_height="match_parent"
                                                android:orientation="vertical"
                                                android:paddingTop="10dp">

                                                <ImageView
                                                    android:layout_width="40dp"
                                                    android:layout_height="40dp"
                                                    android:layout_marginStart="13dp"
                                                    android:src="@mipmap/wind_speed" />

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginStart="13dp"
                                                    android:layout_marginTop="8dp"
                                                    android:text="风速"
                                                    android:textColor="@color/app_White"
                                                    android:textSize="20sp" />
                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="90dp"
                                                android:layout_height="match_parent"
                                                android:orientation="vertical"
                                                android:paddingTop="35dp">

                                                <TextView
                                                    android:id="@+id/wind_power"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="end"
                                                    android:text="..."
                                                    android:textColor="@color/app_White"
                                                    android:textSize="18sp" />

                                                <TextView
                                                    android:id="@+id/wind_direct"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="end"
                                                    android:text="未知"
                                                    android:textColor="@color/app_White"
                                                    android:textSize="18sp" />
                                            </LinearLayout>
                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/linear3"
                                            android:layout_width="wrap_content"
                                            android:layout_height="90dp"
                                            android:layout_toEndOf="@id/linear2"
                                            android:orientation="horizontal"
                                            android:paddingStart="8dp"
                                            android:paddingBottom="8dp">

                                            <LinearLayout
                                                android:layout_width="100dp"
                                                android:layout_height="match_parent"
                                                android:orientation="vertical"
                                                android:paddingTop="7dp">

                                                <ImageView
                                                    android:layout_width="50dp"
                                                    android:layout_height="45dp"
                                                    android:paddingStart="5dp"
                                                    android:src="@mipmap/aqi" />

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="6dp"
                                                    android:paddingLeft="5dp"
                                                    android:text="空气质量"
                                                    android:textColor="@color/app_White"
                                                    android:textSize="20sp" />
                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="60dp"
                                                android:layout_height="match_parent"
                                                android:layout_marginStart="25dp"
                                                android:orientation="vertical"
                                                android:paddingTop="58dp">

                                                <TextView
                                                    android:id="@+id/wind_aqi"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginStart="10dp"
                                                    android:text="00"
                                                    android:textColor="@color/app_White"
                                                    android:textSize="20sp" />
                                            </LinearLayout>
                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/linear4"
                                            android:layout_width="wrap_content"
                                            android:layout_height="90dp"
                                            android:layout_below="@id/linear2"
                                            android:orientation="horizontal"
                                            android:paddingRight="8dp"
                                            android:paddingBottom="8dp">

                                            <LinearLayout
                                                android:layout_width="100dp"
                                                android:layout_height="match_parent"
                                                android:orientation="vertical"
                                                android:paddingTop="10dp">

                                                <ImageView
                                                    android:layout_width="40dp"
                                                    android:layout_height="40dp"
                                                    android:layout_marginStart="13dp"
                                                    android:src="@mipmap/humidity" />

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginStart="13dp"
                                                    android:layout_marginTop="8dp"
                                                    android:text="湿度"
                                                    android:textColor="@color/app_White"
                                                    android:textSize="20sp" />
                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="70dp"
                                                android:layout_height="match_parent"
                                                android:layout_marginStart="20dp"
                                                android:orientation="vertical"
                                                android:paddingTop="58dp">

                                                <TextView
                                                    android:id="@+id/wind_humidity"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="end"
                                                    android:layout_marginStart="18dp"
                                                    android:text="180%"
                                                    android:textColor="@color/app_White"
                                                    android:textSize="20sp" />
                                            </LinearLayout>
                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/linear5"
                                            android:layout_width="wrap_content"
                                            android:layout_height="90dp"
                                            android:layout_below="@id/linear3"
                                            android:layout_toEndOf="@id/linear2"
                                            android:orientation="horizontal"
                                            android:paddingLeft="8dp"
                                            android:paddingBottom="8dp">

                                            <LinearLayout
                                                android:layout_width="110dp"
                                                android:layout_height="match_parent"
                                                android:orientation="vertical"
                                                android:paddingTop="10dp">

                                                <ImageView
                                                    android:layout_width="40dp"
                                                    android:layout_height="40dp"
                                                    android:paddingLeft="5dp"
                                                    android:src="@mipmap/uv" />

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="8dp"
                                                    android:paddingLeft="5dp"
                                                    android:text="紫外线指数"
                                                    android:textColor="@color/app_White"
                                                    android:textSize="20sp" />
                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="60dp"
                                                android:layout_height="match_parent"
                                                android:layout_marginStart="20dp"
                                                android:orientation="vertical"
                                                android:paddingTop="58dp">

                                                <TextView
                                                    android:id="@+id/ziwaixian"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginStart="10dp"
                                                    android:text="00"
                                                    android:textColor="@color/app_White"
                                                    android:textSize="20sp" />
                                            </LinearLayout>
                                        </LinearLayout>
                                    </RelativeLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginEnd="8dp"
                                    android:background="@drawable/bg_weather"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="70dp"
                                        android:layout_marginTop="10dp"
                                        android:orientation="horizontal">

                                        <RelativeLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1">

                                            <ImageView
                                                android:id="@+id/future_img01"
                                                android:layout_width="wrap_content"
                                                android:layout_height="40dp"
                                                android:src="@mipmap/cloudy02" />

                                            <TextView
                                                android:id="@+id/future_data"
                                                android:layout_width="80dp"
                                                android:layout_height="wrap_content"
                                                android:layout_below="@id/future_img01"
                                                android:gravity="center"
                                                android:text="今天"
                                                android:textColor="@color/app_White"
                                                android:textSize="18sp" />

                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1">

                                            <ImageView
                                                android:id="@+id/future_img02"
                                                android:layout_width="wrap_content"
                                                android:layout_height="40dp"
                                                android:src="@mipmap/cloudy02" />

                                            <TextView
                                                android:id="@+id/future_date01"
                                                android:layout_width="80dp"
                                                android:layout_height="wrap_content"
                                                android:layout_below="@id/future_img02"
                                                android:gravity="center"
                                                android:text="明天"
                                                android:textColor="@color/app_White"
                                                android:textSize="18sp" />
                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1">

                                            <ImageView
                                                android:id="@+id/future_img03"
                                                android:layout_width="wrap_content"
                                                android:layout_height="40dp"
                                                android:src="@mipmap/cloudy02" />

                                            <TextView
                                                android:id="@+id/future_date02"
                                                android:layout_width="80dp"
                                                android:layout_height="wrap_content"
                                                android:layout_below="@id/future_img03"
                                                android:gravity="center"
                                                android:text="未知"
                                                android:textColor="@color/app_White"
                                                android:textSize="18sp" />
                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1">

                                            <ImageView
                                                android:id="@+id/future_img04"
                                                android:layout_width="wrap_content"
                                                android:layout_height="40dp"
                                                android:src="@mipmap/cloudy02" />

                                            <TextView
                                                android:id="@+id/future_date03"
                                                android:layout_width="80dp"
                                                android:layout_height="wrap_content"
                                                android:layout_below="@id/future_img04"
                                                android:gravity="center"
                                                android:text="未知"
                                                android:textColor="@color/app_White"
                                                android:textSize="18sp" />
                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1">

                                            <ImageView
                                                android:id="@+id/future_img05"
                                                android:layout_width="wrap_content"
                                                android:layout_height="40dp"
                                                android:src="@mipmap/cloudy02" />

                                            <TextView
                                                android:id="@+id/future_date04"
                                                android:layout_width="80dp"
                                                android:layout_height="wrap_content"
                                                android:layout_below="@id/future_img05"
                                                android:gravity="center"
                                                android:text="未知"
                                                android:textColor="@color/app_White"
                                                android:textSize="18sp" />
                                        </RelativeLayout>
                                    </LinearLayout>

                                    <lecho.lib.hellocharts.view.LineChartView
                                        android:id="@+id/future_chart"
                                        android:layout_width="360dp"
                                        android:layout_height="130dp"
                                        android:layout_gravity="center"
                                        android:layout_marginBottom="10dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginBottom="20dp"
                                    android:background="@drawable/bg_weather"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_margin="10dp"
                                        android:text="最新资讯"
                                        android:textColor="@color/app_White"
                                        android:textSize="18sp" />

                                    <View
                                        android:layout_width="370dp"
                                        android:layout_height="1dp"
                                        android:layout_gravity="center_horizontal"
                                        android:background="@color/app_Gray" />

                                    <com.muppet.weather.View.ListViewForScrollView
                                        android:id="@+id/lv_news"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" />

                                    <View
                                        android:layout_width="300dp"
                                        android:layout_height="1dp"
                                        android:layout_gravity="center_horizontal"
                                        android:background="@color/app_Gray" />

                                    <TextView
                                        android:id="@+id/tv_footView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_margin="10dp"
                                        android:text="查看更多"
                                        android:textColor="@color/app_White"
                                        android:textSize="18sp" />
                                </LinearLayout>
                            </LinearLayout>
                        </FrameLayout>
                    </LinearLayout>
                </ScrollView>
            </FrameLayout>
        </FrameLayout>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/app_White"
        app:itemTextColor="@color/app_Dark"
        app:menu="@menu/navigation_menu" />


</androidx.drawerlayout.widget.DrawerLayout>