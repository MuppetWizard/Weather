<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#A0C5C5"
    tools:context=".Activity.ActLogin">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#996389CA"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="71dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="Welcome"
            android:textColor="#FFFFFF"
            android:textSize="50sp">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:src="@mipmap/user"></ImageView>

            <EditText
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:id="@+id/user_login"
                android:paddingLeft="15dp"
                android:hint="请输入用户名"
                >
            </EditText>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:src="@mipmap/paswd">
            </ImageView>
            <EditText
                android:background="@null"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:paddingLeft="15dp"
                android:id="@+id/pswd_login"
                android:hint="请输入密码"
                >
            </EditText>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/msg_button_login"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:paddingLeft="20dp"
            android:background="@null"
            android:text="短信快捷登陆"
            android:textSize="16sp"
            >
        </Button>
        <Button
            android:id="@+id/forget_button_login"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:background="@null"
            android:text="忘记密码"
            android:textSize="16sp"
            android:layout_marginLeft="110dp"
            >
        </Button>
        <Button
            android:id="@+id/register_button_login"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:background="@null"
            android:text="注册"
            android:textSize="16sp">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/login"
            android:layout_width="350sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60sp"
            android:background="@drawable/button_shape"
            android:text="登录"
            android:textColor="#FFFFFF"
            android:textSize="25sp"></Button>

        <TextView
            android:id="@+id/userread_login"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:text="登录即同意《用户协议》和《隐私政策》"
            android:textColorHighlight="#00ffffff"
            android:textSize="15sp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/wechat_login"
                android:layout_width="134dp"
                android:layout_height="130dp"
                android:src="@mipmap/wechat"></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="微信一键登录"
                android:textSize="18sp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/qq_login"
                android:layout_width="115dp"
                android:layout_height="130dp"
                android:src="@mipmap/qq"></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="QQ一键登录"
                android:textSize="18sp"></TextView>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
</LinearLayout>