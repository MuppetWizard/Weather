<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_White"
    android:orientation="vertical"
    tools:context=".Activity.ActLogin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/app_primary">

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/app_White"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/lv_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:src="@mipmap/back" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_green"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:src="@mipmap/user" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="@color/app_Gray"/>

            <EditText
                android:id="@+id/user_login"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@null"
                android:hint="请输入用户名"
                android:textColorHint="@color/app_Gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_green"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:src="@mipmap/paswd"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="@color/app_Gray"/>
            <EditText
                android:id="@+id/pswd_login"
                android:layout_width="200dp"
                android:layout_height="42dp"
                android:background="@null"
                android:hint="请输入密码"
                android:textColorHint="@color/app_Gray"
                android:inputType="textPassword" />
            <Button
                android:id="@+id/forget_button_login"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_gravity="center_vertical|end"
                android:background="@color/app_White"
                android:text="忘记密码"
                android:textColor="@color/app_Dark"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/msg_button_login"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:background="@color/app_White"
            android:paddingLeft="20dp"
            android:text="短信快捷登陆"
            android:textColor="@color/app_Dark"
            android:textSize="16sp" />


        <Button
            android:id="@+id/register_button_login"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:background="@color/app_White"
            android:text="注册"
            android:textColor="@color/app_Dark"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/rememberPswd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="记住密码"
            android:textColor="@color/app_Dark"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/login"
            android:layout_width="350sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60sp"
            android:background="@drawable/button_shape"
            android:text="登录"
            android:textColor="#FFFFFF"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/userread_login"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:text="登录即同意《用户协议》和《隐私政策》"
            android:textColor="@color/app_Dark"
            android:textColorHighlight="@color/app_blue"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">

        <!--        <LinearLayout-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_weight="1"-->
        <!--            android:gravity="center"-->
        <!--            android:orientation="vertical">-->

        <!--            <ImageView-->
        <!--                android:id="@+id/wechat_login"-->
        <!--                android:layout_width="134dp"-->
        <!--                android:layout_height="130dp"-->
        <!--                android:src="@mipmap/wechat">-->
        <!--            </ImageView>-->

        <!--            <TextView-->
        <!--                android:layout_width="match_parent"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:gravity="center"-->
        <!--                android:text="微信一键登录"-->
        <!--                android:textSize="18sp">-->
        <!--            </TextView>-->
        <!--        </LinearLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/qq_login"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/qq"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="QQ一键登录"
                android:textColor="@color/app_blue"
                android:textSize="18sp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>